{
    "name": "Sample",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Sample Chrome Extension",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content_scripts.js", "jquery.min.js"
            ],
            "css": [
                "content_scripts.css"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Sample",
        "default_popup": "popup.html"
    }
}